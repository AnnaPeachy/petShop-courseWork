	</ItemGroup>

	<ItemGroup>
		<!-- Ссылка на основной проект -->
		<ProjectReference Include="..\projectFolder\petShop_courseWork.csproj" />
	</ItemGroup>

	<ItemGroup>
		<!-- Тестовые файлы -->
		<Compile Include="UnitTest1.cs" />
	</ItemGroup>

